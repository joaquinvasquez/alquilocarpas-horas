{
	"javascript": {
		"formatter": {
			"jsxQuoteStyle": "single",
			"semicolons": "asNeeded",
			"trailingCommas": "none"
		}
	},
	"linter": {
		"rules": {
			"style": {
				"noNonNullAssertion": "off"
			},
			"correctness": {
				"useExhaustiveDependencies": "off",
				"noUnusedImports": "warn",
				"noUndeclaredVariables": "warn",
				"noUnusedVariables": "warn"
			}
		}
	}
}
